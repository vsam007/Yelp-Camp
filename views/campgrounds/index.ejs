<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>Showing All Campgrounds</h1>
<% for(let campground of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length){ %>
                <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                <% }else{ %>
                <img class="img-fluid" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View <%= campground.name %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>    

<script>
    const mapToken='<%-process.env.MAPBOX_TOKEN %>';
    const campgrounds= {features: <%- JSON.stringify(campgrounds) %>}  //we are doing features becoz if we console the data of clusterMap then we will see that there is a field for feature in which our data is present so that's why we used features
</script>

<script src="/javascripts/clusterMap.js"></script>