<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Add Title:</label>
                <input class="form-control" type="text" id="name" name="campground[name]" placeholder="Title" value="<%= foundCamp.name %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Add Price:</label>
                <input class="form-control" type="number" id="price" name="campground[price]" placeholder="Price" value="<%= foundCamp.price %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Add Description:</label>
                <textarea class="form-control" name="campground[description]" id="" cols="30" rows="2" required>
                    <%= foundCamp.description %>
                </textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Add Location:</label>
                <input class="form-control" type="text" id="location" name="campground[location]" placeholder="Location" value="<%= foundCamp.location %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add Images:</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <% foundCamp.images.forEach(function(img,i){ %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImg[]" id="image-<%= i %>" value="<%= img.fileName %>">
                    </div>
                    <label for="image-<%= i %>">Delete</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <a href="/campgrounds/<%= foundCamp._id %>">Cancel</a>
    </div>
</div>
